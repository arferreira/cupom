
<h1>Listing offers</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Rules</th>
    <th>Empresa</th>
    <th>Contact</th>
    <th>Address</th>
    <th>Price</th>
    <th>Discount</th>
    <th>Category</th>
    <th>City</th>
    <th>Count</th>
    <th>Start date</th>
    <th>Final date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @offers.each do |offer| %>
  <tr>
    <td><%= offer.title %></td>
    <td><%= offer.content %></td>
    <td><%= offer.rules %></td>
    <td><%= offer.contact %></td>
    <td><%= offer.empresa %></td>
    <td><%= offer.address %></td>
    <td><%= offer.price %></td>
    <td><%= offer.dicount %></td>
    <td><%= offer.category %></td>
    <td><%= offer.city %></td>
    <td><%= offer.count %></td>
    <td><%= offer.start_date %></td>
    <td><%= offer.final_date %></td>
    <td><%= link_to 'Show', offer %></td>
    <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
    <td><%= link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

