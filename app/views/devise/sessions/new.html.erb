<div class="box_home">
<div style="margin-left:50px;">
<h1 style="color: #45a4dc;">Fa√ßa Login</h1>

<div id="logar_fb" style="margin-left:300px; margin-top:10px; position:absolute;">
	<%= link_to image_tag('/images/login_fb.png') , user_omniauth_authorize_path(:facebook) %>
</div>


<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email, :style => "color:#000;" %><br /><br />
  <%= f.email_field :email, :style => "width:250px; height:30px; border:2px solid #45a4dc;", :autofocus => true %></div>
  <br />
  <div><%= f.label :senha, :style => "color:#000;" %><br /><br />
  <%= f.password_field :password, :style => "width:250px; height:30px; border:2px solid #45a4dc;" %></div>
<br>
  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :lembrar %></div>
  <% end -%>
<br>
  <div><%= f.submit "Logar", :style => "width:250px; height:30px; color: white; background:#45a4dc; border:0px;" %></div>
<% end %>
<br>
<%= render "devise/shared/links" %>
</div>
</div>